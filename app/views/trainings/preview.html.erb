<div class="container mt-4">
  <div class="card shadow-lg border-0 rounded-4 p-4 text-center">
    <h3 class="fw-bold">Review Your Selection</h3>

    <div class="mt-3">
      <div class="d-flex align-items-center justify-content-between border-bottom py-2">
        <span class="text-muted"><i class="fas fa-tachometer-alt me-2"></i>Average Pace:</span>
        <span class="fw-bold"><%= @training.average_speed %></span>
      </div>

      <div class="d-flex align-items-center justify-content-between border-bottom py-2">
        <span class="text-muted"><i class="fas fa-clock me-2"></i>Training Duration:</span>
        <span class="fw-bold"><%= @training.training_duration %> min</span>
      </div>

      <div class="d-flex align-items-center justify-content-between py-2">
        <span class="text-muted"><i class="fas fa-music me-2"></i>Music Genre:</span>
        <span class="fw-bold"><%= @training.music_genre %></span>
      </div>
    </div>

    <!-- Boutons mis à jour avec icônes, style et animation -->
    <div class="d-flex flex-column flex-sm-row justify-content-center gap-3 mt-4 w-100">
      <%= link_to edit_training_path(@training), class: "btn-spotify btn-blue" do %>
        <i class="fas fa-edit"></i> Edit
      <% end %>
      <div data-controller="loader">
        <%= button_to confirm_training_path(@training), class: "btn-spotify btn-green", form: { data: { action: "submit->loader#start" } } do %>
          <div data-loader-target="defaultContent">
            <i class="fas fa-check-circle"></i> Confirm
          </div>
          <div data-loader-target="loadingContent" class="d-none">
            Loading...
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
