<div class="container mt-4">
  <div class="card text-center shadow-lg p-4 border-0 rounded-4">
    <h5 class="mt-2 fw-bold"><%= current_user.spotify_name %></h5>
    <div class="position-relative d-flex justify-content-center my-3">
      <div class="progress-circle border border-3 border-primary-subtle rounded-circle d-flex align-items-center justify-content-center" style="width: 120px; height: 120px;">
        <h4 class="fw-bold"><%= current_user.trainings.count %> Sessions🔥</h4>
      </div>
    </div>
  </div>

  <div class="d-grid gap-2 my-3">
    <div class="d-flex justify-content-center my-3">
<%= link_to raw('<span style="color: #3fb950;">🎧</span> Last playlist'), current_user.trainings.last, class: "btn btn-primary rounded-3 fw-bold px-4" %>

</div>



    <div class="d-grid gap-2 my-3">
<%= link_to raw('<span style="color: #3fb950;">🗓️</span> Previous trainings'), history_trainings_path, class: "btn btn-outline-primary rounded-3 fw-bold px-4" %>
</div>

  </div>

  <% if @trainings.present? %>
    <h4 class="mt-4">My sessions:</h4>

    <% current_user.trainings.order(created_at: :desc).each do |training| %>
      <div class="card mb-3 shadow-sm border-0 rounded-3 p-3">
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <span class="text-danger fs-4 me-2">🏃</span>
            <h6 class="mb-0"><%= training.name %></h6>
          </div>
          <span class="text-muted small"><%= training.created_at.strftime("%d %b %Y %H:%M") %></span>
        </div>
        <p class="text-muted small mb-0">Duration: <%= training.training_duration %> min</p>
        <p class="text-muted small mb-0">Genre: <%= training.music_genre %></p>
        <p class="text-muted small">Speed: <%= training.average_speed %></p>
           <div class="text-end">
      <%= link_to toggle_favorite_training_path(training), method: :patch, remote: true, class: "favorite-icon", id: "favorite-icon-#{training.id}" do %>
        <i class="fa<%= training.favorite_playlist? ? 's' : 'r' %> fa-heart fs-4" style="color: #3fb950;"></i>
      <% end %>
    </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-center text-muted mt-3">Aucun training disponible.</p>
  <% end %>
</div>
