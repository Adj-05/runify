<div class="container mt-4">
  <h5 class="mt-2 fw-bold text-light text-center"><%= current_user.spotify_name %></h5>

 <div class="position-relative d-flex justify-content-center my-3">
  <div class="progress-circle border border-3 rounded-circle d-flex align-items-center justify-content-center"
       style="width: 120px; height: 120px; border-color: red;">
    <h4 class="fw-bold mb-0">
      <span class="text-white fw-bold"><%= current_user.trainings.count %></span>
      <span style="color: #3FB950;">🔥</span>
    </h4>
  </div>
</div>


  <!-- Boutons stylés vert & noir -->
  <div class="d-flex flex-column align-items-center gap-3 my-4">
  <%= link_to raw('<span style="color: #3fb950;">🎧</span> Last playlist'), current_user.trainings.last,
    class: "fw-bold px-4 py-2 rounded-4 border-0 text-decoration-none",
    style: "background-color: #0D1117; color: #3FB950; font-size: 1rem; width: 85%; text-align: center;" %>

  <%= link_to raw('<span style="color: #3fb950;">🗓️</span> See my previous trainings'), history_trainings_path,
    class: "fw-bold px-4 py-2 rounded-4 border border-2 text-decoration-none",
    style: "border-color: #3FB950; color: #3FB950; background-color: transparent; font-size: 1rem; width: 85%; text-align: center;" %>
</div>

  <% if @trainings.present? %>
    <h2 class="text-center my-4 text-light">🏋️‍♂️ My sessions</h2>

    <div class="container">
      <% current_user.trainings.order(created_at: :desc).each do |training| %>
        <div class="card shadow-sm border-0 rounded-4 p-3 mb-3">
          <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
              <span class="text-danger fs-3 me-3">🏃</span>
              <h5 class="mb-0 fw-bold"><%= training.name %></h5>
            </div>
            <span class="text-muted small"><%= training.created_at.strftime("%d %b %Y %H:%M") %></span>
          </div>

          <div class="mt-2">
            <p class="text-muted small mb-1"><strong>⏳ Duration:</strong> <%= training.training_duration %> min</p>
            <p class="text-muted small mb-1"><strong>🎵 Genre:</strong> <%= training.music_genre %></p>
            <p class="text-muted small"><strong>⚡ Speed:</strong> <%= training.average_speed %></p>
          </div>

          <div class="text-end">
            <%= link_to toggle_favorite_training_path(training), method: :patch, remote: true, class: "favorite-icon", id: "favorite-icon-#{training.id}" do %>
              <i class="fa<%= training.favorite_playlist? ? 's' : 'r' %> fa-heart text-danger fs-3"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-muted mt-3">Aucun training disponible.</p>
  <% end %>
</div>
