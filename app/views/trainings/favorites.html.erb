<b><h2 class="text-center my-4 black">â¤ï¸ My favorites</h2></b>

<div class="container">
  <% @favorite_trainings.each do |training| %>
    <div class="card shadow-sm border-0 rounded-4 p-4 mb-4">
      <!-- Header -->
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
        <div class="d-flex align-items-center mb-2 mb-md-0">
          <span class="text-danger fs-3 me-3">ğŸƒ</span>
          <h5 class="mb-0 fw-bold"><%= training.name %></h5>
        </div>
        <span class="text-muted small"><%= training.created_at.strftime("%d %b %Y %H:%M") %></span>
      </div>

      <!-- Infos -->
      <div class="mt-3">
        <p class="text-muted small mb-1"><strong>â³ Duration:</strong> <%= training.training_duration %> min</p>
        <p class="text-muted small mb-1"><strong>ğŸµ Genre:</strong> <%= training.music_genre %></p>
        <p class="text-muted small"><strong>âš¡ Speed:</strong> <%= training.average_speed %></p>
      </div>

      <!-- Playlist Buttons -->
      <% if training.playlists.any? %>
        <div class="mt-3 btn-spotify-wrap">
          <% training.playlists.each do |playlist| %>
            <%= link_to "ğŸµ Playlist", playlist_path(playlist), class: "btn-spotify btn-blue" %>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted small mt-3 text-center">No playlist available for this training.</p>
      <% end %>

      <!-- Favorite Icon -->
      <div class="d-flex justify-content-end mt-4">
        <%= link_to toggle_favorite_training_path(training),
                    method: :patch,
                    remote: true,
                    class: "icon-btn icon-fav",
                    id: "favorite-icon-#{training.id}" do %>
          <i class="fa<%= training.favorite_playlist? ? 's' : 'r' %> fa-heart"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
